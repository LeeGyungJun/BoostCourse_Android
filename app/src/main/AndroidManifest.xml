<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leegyungjun.boostcourse_android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.BoostCource_Android">
        <activity
            android:name=".MoviePagerActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BoostCource_Android.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CommentListActivity"
            android:label="@string/comment_list"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CommentWriteActivity"
            android:label="@string/comment_write"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>